<!-- Page Container -->
<div class="w3-container w3-content " style="max-width:1400px;">
  <!-- The Grid -->
  <div class="w3-row">
    <!-- Left Column -->
    <div class="w3-col m3">
      <!-- Profile -->
      <div class="w3-card-2 w3-round w3-white">
        <div class="w3-container">
          <%= link_to "", edit_worker_registration_path, class: "btn btn-default fa fa-pencil",
          style: "margin-left: 90%;margin-top: 5px;" %>
            <h4 class="w3-center"> <%= current_worker.email %> </h4>
            <p class="w3-center"><img src="<%= current_worker.worker_image.url %>"
              class="w3-circle" style="height:106px;width:106px" alt="Resim"></p>
            <hr>
            <p><i class="fa fa-fw w3-margin-right w3-text-theme"></i> Name Surname:
              <%= current_worker.name %>
                <%= current_worker.lastname %>
            </p>
            <p><i class="fa fa-fw w3-margin-right w3-text-theme"></i> Firm:
              <%= @firm.name %>
            </p>
        </div>
      </div>
      <br>
      <!-- Interests -->
      <div class="w3-card-2 w3-round w3-white w3-hide-small">
        <div class="w3-container">
          <p>Worker skills</p>
          <p>
            <% if @yetenekler.present? %>
              <% @yetenekler.each do |y| %>
                <%= link_to y.name, ilanlar_path(:skillID => y.id), class: "w3-tag w3-small w3-theme-d5" %>
                  <% end %>
                    <% else %>
                      There is no skill
                      <% end %>
          </p>
        </div>
      </div>
      <br>
      <!-- End Left Column -->
    </div>

    <!-- Middle Column -->
    <div class="w3-col m6">
      <div class="w3-row-padding">
        <div class="w3-col m12">
          <div class="w3-card-2 w3-round w3-white">
            <div class="w3-container w3-padding">
              <!--<h6 class="w3-opacity">Vermiş olduğun iş ilanlarını ara</h6>-->
              <div class="col-md-11" style="margin-left: -20px;padding-right: 0px">
                <input class="w3-border w3-padding" style="width: 100%" />
              </div>
              <div class="col-md-1">
                <button type="button" class="w3-btn w3-theme-d6 right" style="height: 38px;margin-left:-1px">Ara</button>
              </div>
            </div>
          </div>
        </div>
      </div>
        <%= link_to 'İlan ekle', new_announcament_path,
        class: "w3-btn w3-theme-d6", style: "height: 38px;margin-top: 2%;margin-left: 16px" %>
      <!-- İlan 1 -->
      <% if @ilanlar.present? %>
        <% @ilanlar.each do |i| %>
          <div class="w3-container w3-card-2 w3-white w3-round w3-margin">
            <br>
            <span class="w3-left w3-opacity-min"> <%= i.title %> </span>
            <span class="w3-right w3-opacity"> <%= i.created_at.strftime('%B %d, %Y %H:%M') %> </span>
            <p> <br>
              <%= i.body.html_safe %>
            </p>
            <div class="w3-container">
              <a href="#demo" class="" data-toggle="collapse" style="margin-left:48%">
                <i class="glyphicon glyphicon-menu-down"></i>
              </a>
              <div id="demo" class="collapse">
                <p> Aranan Yetenekler</p>
                <p>
                  <% if i.skill.present? %>
                    <% i.skill.each do |y| %>
                      <%= link_to y.name, ilanlar_path(:skillID => y.id), class: "w3-tag w3-small w3-theme-d5" %>
                        <% end %>
                          <% else %>
                            There is no skill
                            <% end %>
                </p>
                <div id="butonlar">
                  <%= link_to 'Detay', i, :class => "w3-btn  w3-theme-d6 w3-margin-bottom" %>
                  <%= link_to 'Düzenle', edit_announcament_path(i), :class => "w3-btn  w3-theme-d7 w3-margin-bottom" %>
                  <%= link_to 'Sil', i, method: :delete, data: { confirm: 'Are you sure?' }, :class => "w3-btn  w3-theme-d2 w3-margin-bottom" %>



                </div>
              </div>
            </div>
          </div>
          <% end %>
            <% else %>
              There is no announcament
              <% end %>
                <!-- End Middle Column -->
    </div>

    <!-- Right Column -->
    <div class="w3-col m3">
      <div class="w3-card-2 w3-round w3-white w3-center">
        <div class="w3-container">
          <p class="w3-center">
            <%= link_to ilanlar_path(:compID => @firm.id) do %>
              <%= image_tag @firm.company_icon.url, :class => "w3-circle",style: "height:106px;width:106px;margin-top:20px" %>
                <p>
                  <strong> <%= @firm.name %> </strong>
                </p>
                <% end %>
          </p>
          <p>
            <%= @firm.bio.html_safe %>
          </p>
        </div>
      </div>
      <br>
      <div class="w3-card-2 w3-round w3-white w3-padding-16 w3-center">
        <p>ADS</p>
        <br>
        <br>
      </div>
      <br>
      <div class="w3-card-2 w3-round w3-white w3-padding-16 w3-center">
        <p>ADS</p>
        <br>
        <br>
      </div>
      <!-- End Right Column -->
    </div>
    <!-- End Grid -->
  </div>
  <!-- End Page Container -->
</div>
