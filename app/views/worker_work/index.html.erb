<!-- Page Container -->
<div class="w3-container w3-content " style="max-width:1400px;">
  <!-- The Grid -->
  <div class="w3-row">
    <!-- Left Column -->
    <div class="w3-col m3">
      <!-- Profile -->
      <div class="w3-card-2 w3-round w3-white">
        <div class="w3-container">
          <button type="button" class="btn btn-default" style="margin-left: 90%;margin-top: 5px;">
            <%= link_to "", edit_worker_registration_path, class: "fa fa-pencil" %>
          </button>
          <h4 class="w3-center">Profile Adı</h4>
          <p class="w3-center"><img src="<%= current_worker.worker_image.url %>" class="w3-circle" style="height:106px;width:106px" alt="Resim"></p>
          <hr>
          <p><i class="fa fa-fw w3-margin-right w3-text-theme"></i> Adı Soyadı:
            <%= current_worker.name %>
              <%= current_worker.lastname %>
          </p>
          <p><i class="fa fa-fw w3-margin-right w3-text-theme"></i> Firma:
            <%= @firm.name %>
          </p>
        </div>
      </div>
      <br>
      <!-- Interests -->
      <div class="w3-card-2 w3-round w3-white w3-hide-small">
        <div class="w3-container">
          <p>Çalışanın Yetenekleri</p>
          <p>
            <% if @yetenekler.present? %>
              <% @yetenekler.each do |y| %>
                <span class="w3-tag w3-small w3-theme-d5"><%= y.name %></span>
                <% end %>
                  <% else %>
                    There is no skill
                    <% end %>
          </p>
        </div>
      </div>
      <br>
      <!-- End Left Column -->
    </div>

    <!-- Middle Column -->
    <div class="w3-col m6">
      <div class="w3-row-padding">
        <div class="w3-col m12">
          <div class="w3-card-2 w3-round w3-white">
            <div class="w3-container w3-padding">
              <!--<h6 class="w3-opacity">Vermiş olduğun iş ilanlarını ara</h6>-->
              <div class="col-md-11" style="margin-left: -20px;padding-right: 0px">
                <input class="w3-border w3-padding" style="width: 100%" />
              </div>
              <div class="col-md-1">
                <button type="button" class="w3-btn w3-theme-d6 right" style="height: 38px;margin-left:-1px">Ara</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <button type="button" class="w3-btn w3-theme-d6" style="height: 38px;margin-top: 2%;margin-left: 16px">
        <%= link_to 'İlan ekle', new_announcament_path %>
      </button>

      <!-- İlan 1 -->
      <% if @ilanlar.present? %>
        <% @ilanlar.each do |i| %>
          <div class="w3-container w3-card-2 w3-white w3-round w3-margin">
            <br>
            <span class="w3-left w3-opacity-min"> <%= i.title %> </span>
            <span class="w3-right w3-opacity"> <%= i.created_at.strftime('%B %d, %Y %H:%M') %> </span>
            <p>
              <%= i.body.html_safe %>
            </p>
            <div class="w3-container">
              <a href="#demo" class="" data-toggle="collapse" style="margin-left:48%">
                <i class="glyphicon glyphicon-menu-down"></i>
              </a>
              <div id="demo" class="collapse">
                <p> Aranan Yetenekler</p>
                <p>
                  <% if i.skill.present? %>
                    <% i.skills.each do |is| %>
                      <span class="w3-tag w3-small w3-theme-d5"><%= is.name %></span>
                      <% end %>
                        <% else %>
                          There is no skill
                          <% end %>
                </p>
                <div id="butonlar">
                  <button type="button" class="w3-btn  w3-theme-d2 w3-margin-bottom" style="margin-left: 62%">Sil</button>
                  <button type="button" class="w3-btn  w3-theme-d7 w3-margin-bottom" style="">Düzenle</button>
                  <button type="button" class="w3-btn  w3-theme-d6 w3-margin-bottom" style="">Detay</button>
                </div>
              </div>
            </div>
          </div>
          <% end %>
            <% else %>
              There is no announcament
              <% end %>
                <!-- End Middle Column -->
    </div>

    <!-- Right Column -->
    <div class="w3-col m3">
      <div class="w3-card-2 w3-round w3-white w3-center">
        <div class="w3-container">
          <p><strong> <%= @firm.name %> </strong></p>
          <p>
            <%= @firm.bio.html_safe %>
          </p>
          <br>
          <br>
          <br>
          <br>
        </div>
      </div>
      <br>
      <div class="w3-card-2 w3-round w3-white w3-padding-16 w3-center">
        <p>ADS</p>
        <br>
        <br>
      </div>
      <br>
      <div class="w3-card-2 w3-round w3-white w3-padding-16 w3-center">
        <p>ADS</p>
        <br>
        <br>
      </div>
      <!-- End Right Column -->
    </div>
    <!-- End Grid -->
  </div>
  <!-- End Page Container -->
</div>
