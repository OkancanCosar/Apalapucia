<body class="bodyarkasi2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form" style="margin-left: 30%;margin-top: 1%">
      <div class="">
        <div id="signup">
          <h1>Düzenle</h1>
          <p style="background: white">
            <%= devise_error_messages! %>
          </p>
          <div class="field-wrap">
            <%= f.label :name ,"Ad"%>
              <%= f.text_field :name, autofocus: true %>
          </div>
          <div class="field-wrap">
            <%= f.label :lastname,"Soyad" %>
              <%= f.text_field :lastname %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for:
              <%= resource.unconfirmed_email %>
            </div>
            <% end %>
              <div class="field-wrap">
                <%= f.label :email,"Mail" %>
                  <%= f.email_field :email %>
              </div>
              <div class="field-wrap">
                <%= f.label :password,"Şifre" %>
                  <%= f.password_field :password, autocomplete: "off" %>
              </div>
              <div class="field-wrap">
                <%= f.label :password_confirmation,"Şifreyi onayla" %>
                  <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>
              <div class="field-wrap">
                <%= f.label :current_password ,"Şu anki aktif şifre"%>
                  <%= f.password_field :current_password, autocomplete: "off" %>
              </div>
              <div class="field">
                <div class="field-wrap" style="margin-bottom: 5px;margin-left: -15px">
                  <%= f.label :description,"Açıklama" %>
                </div>
                <%= f.text_area :description %>
              </div>
              <div class="field">
                <div class="field-wrap" style="margin-bottom: 5px;margin-top: 25px;margin-left: -15px">
                  <%= f.label :company_id,"Çalıştığın firma" %>
                </div>
                <%= f.collection_select(:company_id, @comps, :id, :name, :include_blank => "Firmanızı seçiniz...") %>
              </div>
              <div class="field-wrap" style="margin-bottom: 5px;margin-left: -15px">
                <%= f.label :worker_image,"Profil resmi" %>
              </div>
              <div class="field-wrap" style="margin-left: -10px">
                <%= f.file_field :worker_image %>
              </div>
              <div class="form-group">
                <% skils = Skill.all.map{|t| [t.name, t.id]}.sort %>
                  <%= f.select :skill_ids, skils,
                         { prompt: "Select some skill" },
                         {class: "form-control", multiple: true, size: 10 } %>
                    <p class="help-block" style="color:white;">Çoklu seçim için Ctrl tuşunu kullanınız</p>
              </div>
              <button class="button button-block">
                <%= f.submit "Güncelle" %>
              </button>
                  <% end %>
        </div>
      </div>
      <!-- tab-content -->

    </div>
    <!-- /form -->
    <%= javascript_include_tag 'index' %>
</body>
