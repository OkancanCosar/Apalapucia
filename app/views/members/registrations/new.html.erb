<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <body class="bodyarkasi3">
<div class="form" style="margin-left: 30%;margin-top: 1%">
  <ul class="tab-group">
    <li class="tab active"><a href="#signup" style="width: 100%">Kayıt</a></li>
  </ul>
  <div class="">
    <div id="signup">
      <h1>Kayıt Olun</h1>
          <div class="field-wrap">
            <%= f.label :name,"Ad" %>
            <%= f.text_field :name, autofocus: true %>
          </div>
          <div class="field-wrap">
            <%= f.label :lastname ,"Soyad"%>
            <%= f.text_field :lastname %>
          </div>
          <div class="field-wrap">
            <%= f.label :email,"Mail" %>
            <%= f.email_field :email %>
          </div>
          <div class="field-wrap">
            <%= f.label :password,"Şifre" %>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <div class="field-wrap">
            <%= f.label :password_confirmation,"Şifreyi onayla" %>
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
        <button type="submit" class="button button-block"/><%= f.submit "Kayıt" %></button>
<% end %>
<%= render "members/shared/links" %>
    </div>
  </div><!-- tab-content -->

</div> <!-- /form -->
<%= javascript_include_tag 'index' %>
</body>
