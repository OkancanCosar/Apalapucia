<p id="notice"><%= notice %></p>

<h1>Seasons</h1>
<div class="d">
<%= link_to 'New Season', new_season_path, class:"btn btn-small btn-success f" %>
</div>
<table border="1" class="container" style="margin:10px">
    <thead>
        <tr>
            <th>Start date</th>
            <th>End date</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @seasons.each do |season| %>
        <tr>
            <td><%= season.start_date.strftime('%B %d, %Y %H:%M') %></td>
            <td><%= season.end_date.strftime('%B %d, %Y %H:%M') %></td>
            <td><%= link_to 'Show', season, class:"btn btn-small btn-success" %></td>
            <td><%= link_to 'Edit', edit_season_path(season), class:"btn btn-small btn-info" %></td>
            <td><%= link_to 'Destroy', season, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-small btn-danger" %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<div class="d">
    <%= link_to 'Back to create announcement', new_announcament_path, class:"btn btn-small btn-info f" %>
    <br>
</div>
<style>
    .d {
        text-align: center;
    }
    .f {
        display: inline-block;
    }
</style>
