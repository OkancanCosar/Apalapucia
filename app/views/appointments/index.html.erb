<div class="container">
  <div class="row">
    <div class="col-sm-1" style="margin-left: 60px">
    </div>
    <% if @appointments.present? %>
      <% @appointments.each do |appointments| %>
        <div class="col-sm-3  ">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title">Announcament: <%= appointments.announcament.title  %></h4>
              <p class="card-text">İlan metni:
                <%= appointments.body.html_safe %>
              </p>
            </div>

            <ul class="list-group list-group-flush">
              <li class="list-group-item">Zaman aralığı başlama: 
                <% if appointments.season.present? %>
                  <%= appointments.season.start_date.strftime('%B %d, %Y %H:%M') %>
                <% else %>
                  Ayarlanmadı.
                <% end %>
              </li>
            </ul>

            <div class="card-block">
              <%= link_to 'Göster', appointments, :class => "btn btn-primary" %>
                <%= link_to 'Sil', appointments, method: :delete, data: { confirm: 'Emin misin?' }, :class => "btn btn-danger" %>
            </div>
          </div>
        </div>
        <% end %>
          <% else %>
          Burda herhangi bir ilan yok
          <% end %>
            <div class="col-sm-1">
            </div>
  </div>
</div>
