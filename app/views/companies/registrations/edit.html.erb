<body class="bodyarkasi2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="form" style="margin-left: 30%;margin-top: 1%">
        <div id="signup">
          <h1>Düzenle</h1>
          <p style="background: white">
            <%= devise_error_messages! %>
          </p>
          <div class="field-wrap">
            <%= f.label :email,"Mail" %>
              <%= f.email_field :email, autofocus: true %>
          </div>
          <div class="field-wrap">
            <%= f.label :password ,"Şifre"%>
              <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <div class="field-wrap">
            <%= f.label :password_confirmation,"Şifreyi onayla" %>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>
          <div class="field-wrap">
            <%= f.label :current_password ,"Şu anki aktif şifre"%>
              <%= f.password_field :current_password, autocomplete: "off" %>
          </div>
          <div class="field-wrap">
            <%= f.label :company_poster,"Firma posteri"  %>
          </div>
          <div class="field-wrap">
            <%= f.file_field :company_poster %>
          </div>
          <div class="field-wrap" style="margin-top: -30px">
            <%= f.label :company_icon,"Firma resmi" %>
          </div>
          <div class="field-wrap" style="margin-top: -30px">
            <%= f.file_field :company_icon %>
          </div>
          <button type="submit" class="button button-block" />
          <%= f.submit "Güncelle" %>
          </button>
          <% end %>
        </div>

      <!-- tab-content -->
    </div>
    <!-- /form -->
    <%= javascript_include_tag 'index' %>
</body>
