<div class="container">
  <div class="row">
    <div class="col-sm-1" style="margin-left: 60px">
    </div>
    <% if @announcaments.present? %>
        <% @announcaments.each do |announcament| %>
        <div class="col-sm-3  ">
          <div class="card">
            <div class="card-block">
              <h4 class="card-title">İlan Başlığı:<%= announcament.title %></h4>
              <p class="card-text">İlan İçeriği:<%= announcament.body.html_safe %></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Şehir: <%= announcament.city %></li>
            </ul>
            <div class="card-block">
              <%= link_to 'Göster', announcament, :class => "btn btn-primary" %>
            </div>
          </div>
        </div>
        <% end %>
    <% else %>
      There is no announcament
    <% end %>
    <div class="col-sm-1">
    </div>
  </div>
</div>
