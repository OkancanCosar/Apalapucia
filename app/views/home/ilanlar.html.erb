<div class="container">

  <% if @at == 1 %>
    <div class="row MT10">
      <div class="">
        <% if @announcaments.present? %>
          <% @announcaments.each do |announcament| %>
            <div class="col-sm-3  ">
              <div class="card">
                <div class="card-block">
                  <h4 class="card-title">İlan Başlığı:<%= announcament.title %></h4>
                  <p class="card-text">İlan İçeriği:
                    <%= announcament.body.html_safe %>
                  </p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">Şehir:
                    <%= announcament.city %>
                  </li>
                </ul>
                <div class="card-block">
                  <%= link_to 'Göster', announcament, :class => "btn btn-primary" %>
                </div>
              </div>
            </div>
            <% end %>
              <% else %>
                İlan yok
                <% end %>
      </div>
    </div>

    <% elsif @at == 2 %>
      <% if @Search4Announcement.present? %>
        <!-- Search4Announcement -->
        <span class="MT10"> "<%= @sss.upcase %>" İÇİN İLANLAR</span>
        <div class="row MT10">
          <div class="">
            <% @Search4Announcement.each do |announcament| %>
              <div class="col-sm-3  ">
                <div class="card">
                  <div class="card-block">
                    <h4 class="card-title">İlan Başlığı:<%= announcament.title %></h4>
                    <p class="card-text">İlan İçeriği:
                      <%= announcament.body.html_safe %>
                    </p>
                  </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item">Şehir:
                      <%= announcament.city %>
                    </li>
                  </ul>
                  <div class="card-block">
                    <%= link_to 'Göster', announcament, :class => "btn btn-primary" %>
                  </div>
                </div>
              </div>
              <% end %>
          </div>
        </div>
        <hr>
        <% end %>

          <% if @Search4Company.present? %>
            <!-- Search4Company -->
            <span class="MT10">"<%= @sss.upcase %>" ŞİRKETLERİ İÇİN İLANLAR</span>
            <div class="row MT10">
              <div class="">
                <% @Search4Company.each do |announcament| %>
                  <div class="col-sm-3  ">
                    <div class="card">
                      <div class="card-block">
                        <h4 class="card-title">İlan Başlığı:<%= announcament.title %></h4>
                        <p class="card-text">İlan İçeriği:
                          <%= announcament.body.html_safe %>
                        </p>
                      </div>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item">Şehir:
                          <%= announcament.city %>
                        </li>
                      </ul>
                      <div class="card-block">
                        <%= link_to 'Göster', announcament, :class => "btn btn-primary" %>
                      </div>
                    </div>
                  </div>
                  <% end %>
              </div>
            </div>
            <hr>
            <% end %>

              <% if @Search4Skill.present? %>
                <!-- Search4Skill -->
                <span class="MT10"> "<%= @sss.upcase %>" YETENEĞİ İÇİN İLANLAR </span>
                <div class="row MT10">
                  <div class="">
                    <% @Search4Skill.each do |announcament| %>
                      <div class="col-sm-3  ">
                        <div class="card">
                          <div class="card-block">
                            <h4 class="card-title">İlan Başlığı:<%= announcament.title %></h4>
                            <p class="card-text">İlan İçeriği:
                              <%= announcament.body.html_safe %>
                            </p>
                          </div>
                          <ul class="list-group list-group-flush">
                            <li class="list-group-item">Şehir:
                              <%= announcament.city %>
                            </li>
                          </ul>
                          <div class="card-block">
                            <%= link_to 'Göster', announcament, :class => "btn btn-primary" %>
                          </div>
                        </div>
                      </div>
                      <% end %>
                        <% end %>

                  </div>
                </div>

                <% end %>
</div>
<style>
  .MT10 {
    margin: 10px
  }
</style>
