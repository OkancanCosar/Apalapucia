<div class="container"></div>
<header class="" style="margin-top: -20px;height: 400px">
  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div id="custom-search-input">
        <div class="input-group col-md-12">


          <%= form_tag ilanlar_path, :method => 'get' do %>

              <%= text_field_tag :search, params[:search], class: "search-query form-control", :required => true ,
                placeholder: "Find announcament"%>


                <%= submit_tag "Search", :name => nil, class:"naber" %>



            <% end %>

<style >
  .naber{
    background-color: #b55c5c
  }
</style>




        </div>
      </div>
      <img src="http://erdemgencoglu.16mb.com/image/slide3.jpg" style="height: 509px; width: 100%" alt="">
    </div>
  </div>
</header>
<br>
<div class="firmalar" style="width: 90%;padding-left: 10%">
  <div class='row'>
    <h2><center>Bizim ile Çalışan Firmalar</center></h2>
    <div class='col-md-8' style="margin-left: 17%">
      <div class="carousel slide media-carousel" id="media">

        <div class="carousel-inner">
          <div class="item  active">
            <div class="row ">

              <% @comp.each do |c|%>
                <div class="col-md-4">

                  <%= link_to ilanlar_path(:compID => c.id) do %>
                    <%= image_tag c.company_icon.url, :class => "img-circle2 img-responsive" %>
                      <% end %>

                </div>
                <%end%>
            </div>
          </div>
          <div class="item">
            <div class="row">
              <div class="col-md-4">
                <img class="img-circle img-responsive img-center" src="http://placehold.it/300x300" alt="">
                <center>
                  <h5>Firma #4</h5></center>
              </div>
              <div class="col-md-4">
                <img class="img-circle img-responsive img-center" src="http://placehold.it/300x300" alt="">
                <center>
                  <h5>Firma #5</h5></center>
              </div>
              <div class="col-md-4">
                <img class="img-circle img-responsive img-center" src="http://placehold.it/300x300" alt="">
                <center>
                  <h5>Firma #6</h5></center>
              </div>

            </div>
          </div>
        </div>
        <a data-slide="prev" href="#media" class="left carousel-control" style="margin-left: -35%">‹</a>
        <a data-slide="next" href="#media" class="right carousel-control" style="margin-right: -35%">›</a>
      </div>
    </div>
  </div>
</div>
<!-- Page Content -->
<div class="container firmaalticontainer ">
  <!-- Page Features -->
  <div class="row text-center">
    <div class="col-md-4">
      <h4>Son İlanlar</h4>
      <% @ans.each do |c|%>
        <ul class="list-group">
          <li class="list-group-item">
            <%= link_to c.title, c %>
          </li>
        </ul>
        <%end%>
          <h4>Son ilan veren Firmalar</h4>
          <% @comporder.each do |c|%>
            <div class="col-md-6" style="margin-left:25%">

              <%= link_to ilanlar_path(:compID => c.id) do %>
                <%= image_tag c.company_icon.url, :class => "img-circle2 img-responsive" %>
                  <span style="font-weight: bold;"> <%= c.name %> </span>
                  <% end %>
                    <hr>
            </div>
            <%end%>
    </div>
    <h4>Tüm Yetenekler</h4>
    <div class="col-md-8">

      <% if @s.present? %>
        <% @s.each do |s| %>

          <div class="col-md-6 nopadding">
            <div class="thumbnail">
              <img class="card-img-top" src="">
              <%= link_to(image_tag(s.skill_icon.url), ilanlar_path(:skillID => s.id)) %>
            </div>
          </div>

          <% end %>
            <% end %>

    </div>
  </div>
  <hr>
</div>
<%= javascript_include_tag 'jquery.js' %>
